[root]
size=4G
type=ext4
mountpoint=/
options=errors=remount-ro,relatime,discard

[swap]
size=512M
type=swap

[var]
size=2G
type=ext4
mountpoint=/var
options=defaults,relatime,discard

[var-log]
size=1G
type=ext4
mountpoint=/var/log
options=defaults,noatime,discard

[tmp]
size=1G
type=ext4
mountpoint=/tmp
options=defaults,relatime,discard

